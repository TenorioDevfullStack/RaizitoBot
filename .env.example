# Environment Variables Template
# Copy this file to .env and fill in your actual values

# Telegram Bot Token (get from @BotFather)
TELEGRAM_TOKEN=your_telegram_bot_token_here

# Google Gemini API Key (get from https://makersuite.google.com/app/apikey)
GEMINI_API_KEY=your_gemini_api_key_here

# Groq API Key for Whisper (get from https://console.groq.com)
GROQ_API_KEY=your_groq_api_key_here

# Google Cloud Custom Search API (for /search)
GOOGLE_SEARCH_API_KEY=your_google_search_api_key_here
GOOGLE_SEARCH_CX=your_google_custom_search_cx_id_here

# Google Workspace service account for Gmail/Drive/Calendar/Docs
GOOGLE_SERVICE_ACCOUNT_FILE=path_to_service_account.json
# Optional: delegated user email when using a service account
GOOGLE_DELEGATED_USER=your_user@domain.com

# Optional: Custom API endpoints
# CUSTOM_API_URL=https://your-api.com
